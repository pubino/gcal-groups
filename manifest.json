{
  "manifest_version": 3,
  "name": "Calendar Group Manager",
  "version": "1.0.1",
  "description": "Manage Google Calendar groups on calendar.google.com.",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "gcal-groups@pubino.github.io",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  },
  "content_scripts": [
    {
      "matches": ["https://calendar.google.com/*"],
      "js": ["content.js"]
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
